@page
@model WebCl.Pages.DemoModel

@{
    ViewData["Title"] = "Создание";
}

<h1>Создать</h1>

<h4>Клиент</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @foreach (var ci in Model.ChItems)
                {
                    <div class="form-check">
                        @if (Model.ChVals?.Contains(ci.id) ?? false)
                        {
                            <input class="form-check-input" type="checkbox" value="@ci.id" id="flexCheckDefault" name="ChVals" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" value="@ci.id" id="flexCheckDefault" name="ChVals">
                        }
                        <label class="form-check-label" for="flexCheckDefault">
                            @ci.name
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>